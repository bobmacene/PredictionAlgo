@model IEnumerable<PredictionAlgo.Models.MatchBettingData>

@{
    ViewBag.Title = "Index";
}
<div>
    <h2>Pro12 Result Prediction Web App</h2>
    <h4>Use this site to get online betting odds and score spreads. With this data, this app will recommend teams to bet on.</h4>
</div>
<br/>
<div>
    <h3>View current online betting information by clicking below button:</h3>
</div>

<div>
    <input type="button" class="btn btn-info" value="Get Current Online Betting Data"
            onclick="@("window.location.href='" + @Url.Action("GetBettingData") + "'"); " />
</div>
 
<br/>

<div>
    <h2>Previous betting data:</h2>
</div>

<div align="right">
    @if ((string) ViewData["CsvExport"] == string.Empty)
    {
        <h4>
            @Html.ActionLink("Export betting data to csv", "Index",
                new {id = "id", title = "Csv exports to C:\\Users\\TEMP"})
        </h4>
    }
    else
    {
        <div style="color: red">
            @ViewData["CsvExport"]
        </div>
        <h4>
            @Html.ActionLink("Export betting data to csv", "Index",
                new {id = "id", title = "Csv exports to C:\\Users\\TEMP"})
        </h4>
    }
</div>


@{
    var rowCount = 0;

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HomeTeam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeSpread)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeTeamOdds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AwayTeam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AwaySpread)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AwayTeamOdds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FixtureDate)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            rowCount = rowCount == 1 ? 0 : 1;

            if (rowCount == 0)
            {
                <tr style="background-color: #f9f9f9">
                    <td>
                        @Html.DisplayFor(modelItem => item.HomeTeam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HomeSpread)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HomeTeamOdds)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AwayTeam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AwaySpread)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AwayTeamOdds)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FixtureDate)
                    </td>
                </tr>
            }
            else
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.HomeTeam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HomeSpread)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HomeTeamOdds)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AwayTeam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AwaySpread)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AwayTeamOdds)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FixtureDate)
                    </td>
                </tr>
            }
        }
    </table>
}


